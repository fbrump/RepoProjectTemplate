<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <!-- Referência de Style -->
    <link href="@Url.Content("~/Content/Style/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Style/base.css")" rel="stylesheet" type="text/css" />

    <!-- Referência de Script -->
    <script src="@Url.Content("~/Content/Scripts/jQuery/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>My MVC Application</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Classificação", "Home", "Classificacao")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            <p>Rodapé</p>
        </footer>
    </div>
</body>
</html>
